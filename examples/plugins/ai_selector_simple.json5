// Example 6: Form Elements
{
  "@url": "https://example.com/signup",
  "@steps": [
    {
      "@ai-select": "email input field",
      "@name": "email_field",
      "@max-results": 1
    },
    {
      "@ai-select": "password input field",
      "@name": "password_field",
      "@max-results": 1
    },
    {
      "@ai-select": "submit or sign up button",
      "@name": "submit_button",
      "@max-results": 1
    }
  ]
}

// Example 7: Table Data Extraction
{
  "@url": "https://data-site.com/statistics",
  "@steps": [
    {
      "@ai-select": "table headers or column names",
      "@name": "headers"
    },
    {
      "@ai-select": "table data cells or values",
      "@name": "data"
    },
    {
      "@ai-select": "totals or summary rows",
      "@name": "totals"
    }
  ]
}

// Example 8: Mixed with Traditional XPath
{
  "@url": "https://hybrid-example.com",
  "@steps": [
    // Use AI for hard-to-select elements
    {
      "@ai-select": "promotional banner text",
      "@name": "promo"
    },
    // Use traditional XPath for precise selection
    {
      "@xpath": "//div[@id='specific-content']",
      "@fields": {
        "title": ".//h2/text()",
        "description": ".//p/text()"
      }
    },
    // Back to AI for dynamic content
    {
      "@ai-select": "user reviews or testimonials",
      "@name": "reviews"
    }
  ]
}
{
  "@url": "https://quotes.toscrape.com",
  "@steps": [
    {
      // Simple test of Output Format Plugin
      "@format": "jsonl",
      "@output": "test_quotes.jsonl",
      "@compression": "minimal",
      "@include-metadata": true,
      "@step": {
        "@xpath": "//div[@class='quote'][1]",
        "@fields": {
          "text": ".//span[@class='text']/text()",
          "author": ".//small[@class='author']/text()"
        }
      }
    }
  ]
}
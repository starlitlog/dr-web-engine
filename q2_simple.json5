{
  "@url": "https://www.liberoquotidiano.it/",
  "@steps": [
    {
      "@xpath": "//a[contains(@href, '/news/') and contains(@href, 'gattuso')]",
      "@name": "gattuso_articles",
      "@fields": {
        "title": "./text()",
        "url": "./@href"
      },
      "@follow": {
        "@xpath": "./@href",
        "@steps": [
          {
            "@xpath": "//h1 | //h2",
            "@name": "headlines",
            "@fields": {
              "headline": "./text()"
            }
          },
          {
            "@xpath": "//p",
            "@name": "paragraphs",
            "@fields": {
              "content": "./text()"
            }
          }
        ]
      }
    }
  ]
}